pipeline {
    agent any

    stages {
        stage('Deploy Quiz Apply Via Argocd') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'kubeconfig-file', variable: 'KUBECONFIG')]) {
                        sh '''
                          kubectl apply -f argocd/bootstrap/app-of-apps.yaml
                        '''
                    }
                }
            }
        }
    }
}
